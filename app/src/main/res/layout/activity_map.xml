<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity"
    android:orientation="vertical"
    android:background="@color/back">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/what_cook"
            android:layout_width="205dp"
            android:layout_height="170dp"
            android:text="Избранные рецепты"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="179dp"
            android:src="@drawable/favourite"
            />

        <ImageButton
            android:id="@+id/salads"
            android:layout_width="205dp"
            android:layout_height="170dp"
            android:text="Салаты"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="78dp"
            android:src="@drawable/salad"
            android:contentDescription="TODO"
            android:layout_toRightOf="@id/what_cook"
            />
    </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
        <ImageButton
            android:id="@+id/soups"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:text="Супы"
            tools:layout_editor_absoluteX="244dp"
            tools:layout_editor_absoluteY="78dp"
            android:src="@drawable/soup"
            android:contentDescription="TODO"
            android:layout_below="@id/what_cook"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/starters"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:text="Завтраки"
            android:src="@drawable/breakfast"
            android:contentDescription="TODO"
            android:layout_toRightOf="@id/soups"
            android:layout_weight="1"

            />

      </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/main_dishes"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:text="Горячее"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="279dp"
            android:src="@drawable/m_dish"
            android:contentDescription="TODO"
            android:layout_below="@id/soups"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/deserts"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:text="Десерты"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="294dp"
            android:src="@drawable/cupcake"
            android:contentDescription="TODO"
            android:layout_toRightOf="@id/main_dishes"
            android:layout_below="@id/starters"
            android:layout_weight="1"/>
      </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/beverages"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:src="@drawable/drink"
            android:text="Напитки"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="389dp"
            android:contentDescription="TODO"
            android:layout_below="@id/main_dishes"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/bakery"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:text="Выпечка"
            tools:layout_editor_absoluteX="246dp"
            tools:layout_editor_absoluteY="389dp"
            android:src="@drawable/waffels"
            android:contentDescription="TODO"
            android:layout_toRightOf="@id/beverages"
            android:layout_below="@id/deserts"
            android:layout_weight="1"/>
      </LinearLayout>

</LinearLayout>


